<%- include('partials/header') %>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">

    <div class="container">
        <div class="jumbotron shadow mt-5 bg-white rounded">
            <table id="admin" class="table table-striped table-bordered table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>#id</th>
                        <th>Name</th>
                        <th>Admin</th>
                        <th>email</th>
                        <th>secret</th>
                        <th>action</th>
                    </tr>
                </thead>
                <tbody>

                    <% userDB.forEach(user=>{ %>
                        <tr>
                            <td>
                                <%= user._id %>
                            </td>
                            <td>
                                <%= user.name %>
                            </td>
                            <td>
                                <%= user.isAdmin %>
                            </td>
                            <td>
                                <%= user.username %>
                            </td>
                            <td>
                                <%= user.secret %>
                            </td>
                            <td>
                                <form action="/delete" method="post">
                                    <a href="/delete/<%=user._id%>" class="btn btn-light m-2">Delete</a>
                                </form>
                                <form action="/update/<%=user._id%>" method="post">
                                    <a class="btn btn-dark m-2" href="/update/<%=user._id%>">Update</a>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <hr>
            <a class="btn btn-dark btn-lg d-flex justify-content-center m-2" href=" /logout" role="button">Log Out</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#admin').DataTable();
        });
    </script>
    <%- include('partials/footer') %>