<%- include('partials/header') %>

    <div class="container mt-5">
        <h1>Update</h1>
        <div class="row">
            <div class="col-sm-8">
                <div class="card shadow p-3 mb-5 bg-white rounded">
                    <div class="card-body">
                        <form action="/update/<%=id%>" method="POST">
                            <div class="form-group">
                                <label for="email">Name</label>
                                <input type="text" class="form-control" name="Name" value="<%=userToUpdate.name%>">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" name="username"
                                    value="<%= userToUpdate.username %>">
                            </div>
                            <div class="form-group">
                                <label>Secret</label>
                                <textarea type="text" class="form-control rows=6"
                                    name="secret"><%= userToUpdate.secret %></textarea>

                            </div>
                            <button type="submit" class="btn btn-dark m-2">Update</button>
                    </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    </div>


    <%- include('partials/header') %>